#!/usr/bin/env node

var
  command = require('commander'),
  os = require('os'),
  qr = require('qrcode-terminal'),
  qfs = require('../lib/qfs'),
  inquirer = require('inquirer'),
  npmCommand = require('../lib/npm-command'),
  log = require('../lib/log'),
  net = require('net'),
  ips,
  port

command
  .usage('[theme] [options]')
  .option('-p, --play', 'show QR code for Quasar Play app')
  .on('--help', function () {
    log('  Example:')
    log()
    log('    # run development server (with default theme)'.gray)
    log('    $ quasar dev')
    log()
    log('    # run development server with specific theme'.gray)
    log('    $ quasar dev mat')
    log('    $ quasar dev ios')
    log()
    log('    # dev server with QR code'.gray)
    log('    # scan QR code with Quasar Play app')
    log('    $ quasar dev -p')
    log('    $ quasar dev --play')
    log('    $ quasar dev mat --play')
  })
  .parse(process.argv)

if (!qfs.is.inAppFolder()) {
  log.fatal('Not in an App folder.')
  // ^^^ EARLY EXIT
}

port = getPort()

function killProcess (kill) {
  if (kill) {
    log.warning('The port ' + port + ' is already in use. Halting Quasar dev server startup.')
    log.warning('To fix: Stop the process currently using port ' + port + ' or set your config to a different port.')
    process.kill(process.pid)
  }
}

checkPort(port, killProcess)

if (command.play) {
  ips = getHostIps()

  if (ips.length === 0) {
    log.fatal('Cannot acquire network IPs. Are you still connected?')
    // ^^^ EARLY EXIT
  }
  else if (ips.length > 1) {
    inquirer
      .prompt([{
        type: 'list',
        name: 'interface',
        message: 'Select one of your IPs for QR code:',
        choices: ips
      }])
      .then(function (answer) {
        play(answer.interface)
      })
  }
  else {
    play(ips[0])
  }
}
else {
  play()
}

function play (ip) {
  if (ip) {
    log.info('Use ' + 'Quasar Play'.gray + ' app to scan the QR code below')
    log()
    qr.generate('http://' + ip + ':' + port)
  }

  npmCommand('dev', command.args[0])
}

function getHostIps () {
  var
    ifaces = os.networkInterfaces(),
    ips = []

  Object.keys(ifaces).forEach(function (ifname) {
    ifaces[ifname].forEach(function (iface) {
      if (iface.family !== 'IPv4' || iface.internal !== false) {
        // skip over internal (i.e. 127.0.0.1) and non-ipv4 addresses
        return
      }

      ips.push(iface.address)
    })
  })

  return ips
}

function getPort () {
  if (process.env.PORT) {
    return process.env.PORT
  }
  return require(qfs.get.root('config')).dev.port
}

function checkPort (port, killProcess) {
  var testServer = net.createServer()
  .once('error', err => {
    if (err.code !== 'EADDRINUSE') {
      return
    }
    killProcess(true)
  })
  .once('listening', () => {
    testServer.once('close', () => { killProcess(false) })
    .close()
  })
  .listen(port)
}
